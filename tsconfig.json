{
  "compilerOptions": {
    "module": "amd",
    "target": "es5",
    "lib": ["dom","es2015"],
    "baseUrl": "src/",
    "outFile": "src/dist/app.bundle.js",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/app/**/*.ts"],
  "exclude": ["src/app/plugins", "node_modules/**/*"],
  "typeAcquisition": {
    "enable": true
  }
}